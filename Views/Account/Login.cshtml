@using LaptopEshop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<!-- Start page content -->
<div id="page-content" class="page-wrapper">

    <!-- LOGIN SECTION START -->
    <div class="login-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="registered-customers">
                        <h6 class="widget-title border-left mb-50">REGISTERED CUSTOMERS</h6>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="login-account p-30 box-shadow">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <p>If you have an account with us, Please log in.</p>
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                                <button class="submit-btn-1 btn-hover-1" type="submit">login</button>
                            </div>
                        }
                    </div>
                    @Html.ActionLink("Register as a new user", "Register")
                </div>
                <!-- new-customers -->

            </div>
        </div>
    </div>
    <!-- LOGIN SECTION END -->

</div>
<!-- End page content -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
