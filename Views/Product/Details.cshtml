<!-- End page content -->
<script>


    function addcart(productId) {

        var data = {};
       
        data["productId"] = productId;

        $.ajax({
            url: '/api/CartAPI/Get',
            type: 'Get',
            contentType: 'application/json',
            data: data,
            dataType: 'text',
            success: function (result) {
               // console.log(result);
                alert("Đã thêm vào giỏ hàng sản phẩm: " + result);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
    

</script>