                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="active-related-product">
                                @foreach (var item in ViewBag.histories)
                                {
                                    <!-- product-item start -->
                                    <div class="col-xs-12">
                                        <div class="product-item">
                                            <div class="product-img">
                                                <a href="single-product.html">
